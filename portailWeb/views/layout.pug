extends ../node_modules/pug-bootstrap/_bootstrap

append styles
    // Bootstrap theme
    +bootswatch("paper") 
    // Custom styles for this template
    link(href='../stylesheets/theme.css', rel='stylesheet')
        
block body
    // Fixed navbar
    nav.navbar.navbar-inverse
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/')= "Portail M2L"
            #navbar.navbar-collapse.collapse
                ul.nav.navbar-nav
                    li.active
                        a(href='/') Home
                    li
                        a(href='#about') Menu 1
                    li
                        a(href='#contact') Menu 2
                        if(!role)
                        else if (role==='lambda')
                            li.dropdown
                                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                                    | Menu lambda
                                    span.caret
                                ul.dropdown-menu(role='menu')
                                    li
                                        a(href='#') Action 1
                                    li
                                        a(href='#') Action 2
                                    li
                                        a(href='#') Action 3
                                    li.divider
                                    li.dropdown-header Nav header
                                    li
                                        a(href='#') Action 4
                                    li
                                        a(href='#') Action 5
                        else if (role === 'Ligue')
                            li.dropdown
                                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                                    | Menu Ligue
                                    span.caret
                                ul.dropdown-menu(role='menu')
                                    li
                                        a(href='/demandePrestation') Demande de Prestation
                                    li
                                        a(href='/facture/demandeAfficheFact') Afficher les factures
                                    li
                                        a(href='#') Action 3
                                    li.divider
                                    li.dropdown-header Nav header
                                    li
                                        a(href='#') Action 4
                                    li
                                        a(href='#') Action 5
                        else if (role === 'Conseiller')
                            li.dropdown
                                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                                    | Menu Conseiller
                                    span.caret
                                ul.dropdown-menu(role='menu')
                                    li
                                        a(href='/prestation') Voir les prestations
                                    li
                                        a(href='#') Action 2
                                    li
                                        a(href='#') Action 3
                                    li.divider
                                    li.dropdown-header Nav header
                                    li
                                        a(href='#') Action 4
                                    li
                                        a(href='#') Action 5
                ul.nav.navbar-nav.navbar-right
                    li
                        if (!user)
                            a(href="/users/login") Login
                        else
                            a(href="/users/logout") Logout
